// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  rut         String       @id
  nombres     String
  apellidos   String
  correo      String
  clave       String
  area        String
  cargo       String
  turno       String
  empresa     String
  qrCode      String
  pin         Int
  asistencia  Asistencia[]
}

model Asistencia {
  id          Int      @id @default(autoincrement())
  horaEntrada DateTime
  horaSalida  DateTime
  userRut     String
  user        User     @relation(fields: [userRut], references: [rut], onDelete: Cascade, onUpdate: Cascade)
}
